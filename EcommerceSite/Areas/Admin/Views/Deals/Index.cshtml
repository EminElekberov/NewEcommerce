@model IList<Deals>


@if (TempData["Success"] != null)
{
    <div class="alert alert-primary" role="alert">
        @TempData["Success"]
    </div>
}
<div style="margin-bottom:50px">
    <a href="/Admin/Deals/Create" class="btn btn-outline-success" style="width:100%">Add new slider</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Image</th>
            <th scope="col">Title</th>
            <th scope="col">Name</th>
            <th scope="col">PresentPrice</th>
            <th scope="col">PastPrice</th>
            <th scope="col">Date</th>
            <th>CRUD</th>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>
                    <img width="200" height="150" src="~/images/Deals/@item.Image" alt="Alternate Text" />
                </td>
                <td>@item.Title</td>
                <td>@item.Name</td>
                <td>@item.PresentPrice</td>
                <td>@item.PastPrice</td>
                <td>@item.Date</td>

                <td>
                    <a href="/Admin/Deals/Edit/@item.Id" style="color:red"><i class="fas fa-edit"></i></a>
                    <a href="/Admin/Deals/Delete/@item.Id" onclick="return confirm('Are you sure')"><i class="fas fa-trash-alt"></i></a>
                    <br />
                    <a href="/Admin/Deals/Details/@item.Id" style="color:red">Etrafli</a>
                </td>
            </tr>

        }

    </tbody>
</table>