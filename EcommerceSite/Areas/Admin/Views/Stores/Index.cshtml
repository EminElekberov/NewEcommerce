@model IList<OurStores>


@if (TempData["Success"] != null)
{
    <div class="alert alert-primary" role="alert">
        @TempData["Success"]
    </div>
}
<div style="margin-bottom:50px">
    <a href="/Admin/OurStores/Create" class="btn btn-outline-success" style="width:100%">Add new slider</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Image</th>
            <th scope="col">Store Name</th>
            <th scope="col">Description</th>
            <th scope="col">Additional Information</th>
            <th>CRUD</th>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>
                    <img width="200" height="150" src="~/images/products/@item.Image" alt="Alternate Text" />
                </td>
                <td>@item.StoreName</td>
                <td>@item.Description</td>
                <td>@item.AdditionalInformation</td>

                <td>
                    <a href="/Admin/OurStores/Edit/@item.Id" style="color:red"><i class="fas fa-edit"></i></a>
                    <a href="/Admin/OurStores/Delete/@item.Id" onclick="return confirm('Are you sure')"><i class="fas fa-trash-alt"></i></a>
                    <br />
                    <a href="/Admin/OurStores/Details/@item.Id" style="color:red">Etrafli</a>
                </td>
            </tr>

        }

    </tbody>
</table>